<html>
   <head>
      <title><%= data[0].title %></title>
        <link href="/css/style.css" rel="stylesheet" type="text/css">    
       <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
   </head>
   <body>
      <h1><%= data[0].title %></h1>
      <h2><%= data[0].desc %></h2>
         <% for(var i=0; i<data[0]["Questions"].length; i++) { %>
         <h3><%= data[0]["Questions"][i].question %></h3>
            <form class="option">
               <% for (var j = 0; j < data[0]["Questions"][i].answers.length; j++) { %>
                <% if (data[0]["Questions"][i].answers[j].type.indexOf("checkbox")!=-1){%>
                <input type="checkbox" id="<%= data[0]["Questions"][i].answers[j].id %>">
                <% }%>
                    <% if (data[0]["Questions"][i].answers[j].type.indexOf("radio")!=-1){%>
                    <input type="radio" name="<%= data[0]["Questions"][i].id %>" id="<%= data[0]["Questions"][i].answers[j].id %>">
                    <% }%>
                    <label for="<%=data[0]["Questions"][i].answers[j].id%>"><%= data[0]["Questions"][i].answers[j].text %></label>
                
                    <% if (data[0]["Questions"][i].answers[j].type.indexOf("text")!=-1){%>
                    <input type="text" id="<%= data[0]["Questions"][i].answers[j].id %>">
                    <% }%>
                
                    <div class="subform" id="<%= data[0]["Questions"][i].answers[j].id + "form"%>">
                       <% for (var k = 0; k < data[0]["Questions"][i].answers[j].suboptions.length; k++) { %>
                        <div class = "suboption">
                            <% if (data[0]["Questions"][i].answers[j].suboptions[k].type.indexOf("checkbox")!=-1){%>
                            <input type="checkbox" id="<%= data[0]["Questions"][i].answers[j].suboptions[k].id %>">
                            <% }%>
                            <% if (data[0]["Questions"][i].answers[j].suboptions[k].type.indexOf("radio")!=-1){%>
                            <input type="radio" name="<%= data[0]["Questions"][i].answers[j].id %>" id="<%= data[0]["Questions"][i].answers[j].suboptions[k].id %>">
                            <% }%>
                            <label for="<%=data[0]["Questions"][i].answers[j].suboptions[k].id%>"><%= data[0]["Questions"][i].answers[j].suboptions[k].text %></label>
                            <% if (data[0]["Questions"][i].answers[j].suboptions[k].type.indexOf("text")!=-1){%>
                            <input type="text" id="<%= data[0]["Questions"][i].answers[j].suboptions[k].id %>">
                            <% }%>
                            </div>
                       <% }%>
                    </div>
                <br>
               <% } %>
            </form>
         <% } %>
       
       <script>
        $(document).ready(function () {
        $('input:checkbox').change(function () {
            if ($(this).is(":checked")) {
                document.getElementById((this).id +"form").style.display = "inline";
            }
            else {
                document.getElementById((this).id +"form").style.display = "none";
            }
        });
            $('input:radio').change(function () {
                if ($(this).is(":checked")) {
                    var x = document.getElementsByName(this.name);
                    for (var i = 0; i<x.length; i++){
                        document.getElementById(x[i].id + "form").style.display = "none";
                    }
                    document.getElementById((this).id +"form").style.display = "inline";
                }
            });
        });
       
       </script>
   </body>
</html>